  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\src\\api\\manage.py",
      "args": [
        "runserver",
        "--noreload"
      ],
      "django": true
    },
    {
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "port": 8000,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
        }
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Attach to Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "port": 9229,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceRoot}/src/web/*",
      }
    }
  ]
}